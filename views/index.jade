extends layout

block content
  section(ng-controller="converterCtrl")
    div.header
      h1 Guitar to Piano Converter
    div.menubutton(ng-include="'./images/menu-icon.svg'" ng-click="menuToggle()" ng-class="{buttonActive:menuStatus === 'open'}")
    div.container
      h3 Click the guitar frets to convert manually, or click the menu for chords.
      div(class='guitar' ng-include="'/images/guitar.svg'")
      div(class='piano' ng-include="'/images/piano.svg'")
    div.menu(ng-class="{menuactive:menuStatus === 'open'}")
      div.chordbox
        h2(ng-click="menuToggle()") Pick a chord
        select(name="rootSelect" ng-model="chordData.rootSelect")
          option(value="E" selected) E
          option(value="F") F
          option(value="G") G
          option(value="A") A
          option(value="B") B
          option(value="C") C
          option(value="D") D
        select(name="chordSelect" ng-model="chordData.chordSelect")
          option(value="Chord" selected) Chord Type
          option(value="major") major
          option(value="minor") minor
          option(value="major7") major7
        submit(ng-click="showChord()") Go!
    div.footer
      p Copyright &#169; 2016 Connor Klausing